<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>New Patients</title>
    <link rel="stylesheet" href="vendors/newPatient.css">

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
       <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

  </head>
  <body>

    <h1>New Patient Intake</h1>

    <div class="containter">
      <div class="col-sm-6 col-sm-offset-3">
    <form class="form-group row" autocomplete="off" action="newPatient" method="post">


      <label for="">Keyword</label>
      <select class="" name="keyword">
        <option value="a">a</option>
        <option value="b">b</option>
        <option value="c">c</option>
        <option value="d">d</option>
        <option value="e">e</option>
        <option value="f">f</option>
        <option value="g">g</option>
        <option value="h">h</option>
        <option value="i">i</option>
        <option value="j">j</option>
        <option value="k">k</option>
        <option value="l">l</option>
        <option value="m">m</option>
        <option value="n">n</option>
        <option value="o">o</option>
        <option value="p">p</option>
        <option value="q">q</option>
        <option value="r">r</option>
        <option value="s">s</option>
        <option value="t">t</option>
        <option value="u">u</option>
        <option value="v">v</option>
        <option value="w">w</option>
        <option value="x">x</option>
        <option value="y">y</option>
        <option value="z">z</option>
      </select>
      <!-- input for childs name -->
      <input name="name" type="text" class="form-control appointment_time" placeholder="patient name">
      <!-- input for diagnosis  -->
      <input name="diagnosis" type="text" class="form-control appointment_time" placeholder="Diagnosis">
      <!-- input for DOB -->
      <input name="DOB" type="text" class="form-control appointment_time" placeholder="MM/DD/YYY">
      <!-- input for main doctor -->
      <input name="maindoctor" type="text" class="form-control appointment_time" placeholder="Main Doctor">
      <!-- input for mothersname -->
      <input name="mothername" type="text" class="form-control appointment_time" placeholder="Mother's Name">
      <!-- input for fathersname -->
      <input name="fathername" type="text" class="form-control appointment_time" placeholder="Father's Name">
      <!-- input for phone number -->
      <input name="number" type="text" class="form-control appointment_time" placeholder="Phone Number">
      <!-- input for email  -->
      <input name="email" type="text" class="form-control appointment_time" placeholder="Email Address">
      <!-- input for address -->
      <input name="address" type="text" class="form-control appointment_time" placeholder="Residence">
      <!-- button to submit patient -->
      <button type="submit" name="button">Create Patient Profile</button>
    </form>
  </div>
  </div>
</div>
  </body>
</html>
